<h2>Saved Recipies for <%=user.firstName%>
</h2>

<h2>list of saved recipies here (LINKS) and picture?</h2>
<div class="flex justify-center">
    <div class="mx-30 my-10 grid grid-cols-3 gap-32">
        <% allsavedrecipes.forEach(function(recipe){ %>
            <div class="flex flex-col items-center justify-center bg-white max-w-[20rem] rounded-3xl overflow-hidden shadow-lg my-1">
                <img class= "min-w-[120%] mt-[-2]" src=<%=recipe.dataValues.imageurl%>>
                <div class="px-3 py-2">
                    <p class="text-center font-bold text-xl mb-2"><a href="/recipes/editsaved/<%=recipe.dataValues.id%>">
                            <%=recipe.dataValues.title%>
                        </a></p>
                </div>

                <form method="POST" action="/recipes/saved/<%=recipe.dataValues.id%>?_method=DELETE">
                    <button class="mb-5 p-2 text-white bg-black border rounded-lg" type="submit">Delete saved recipe</button>
                </form>
            </div>
            <% }) %>
    </div>
</div>