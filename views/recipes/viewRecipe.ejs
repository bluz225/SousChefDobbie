<div class="mx-80 my-10">
    <div class="flex justify-between">
        <h2 class="my-1 w-[20rem] font-bold">
            <%=viewRecipeResult.title%>
        </h2>
        <div>
            <form method="POST" action="/recipes/saved">
                <input name="recipe" value="<%= JSON.stringify(viewRecipeResult)%>" hidden>
                <input name="imgURL" value="<%= JSON.stringify(searchedResult.image)%>" hidden>
                <button class="text-center py-1 my-2 ml-5 w-[10rem] bg-black text-white border rounded-3xl" type="submit">Add to
                    favorites</button>
            </form>
        </div>
    </div>

    <div class="my-1 w-[20rem] h-[15rem] flex justify-center items-center">
        <img class="border rounded-3xl" src="<%=searchedResult.image%>" alt="image of <%=viewRecipeResult.title%>">
    </div>
    <hr>
    <div class="flex flex-col">
        <div class="my-1">
            <h2 class="font-bold">Recipe Summary:</h2>
        </div>
        <div class="ml-2">
            <p>
                <%=viewRecipeResult.summary%>
            </p>
        </div>
    </div>

    <div class="flex flex-col mt-5">
        <hr>
        <h2 class="mb-1 font-bold">Ingredients:</h2>
        <ul class="flex flex-col ml-2">
            <% viewRecipeResult.extendedIngredients.forEach(function(ingredient){%>
                <li class="my-1">
                    <p><%=ingredient.amount%> 
                        <% if (ingredient.unit) {%>
                            <%=ingredient.unit%>, 
                        <%}%>
                        <%=ingredient.name%></p>
                </li>
                <% }) %>
        </ul>
    </div>

    <div class="flex flex-col mt-5">
        <hr>
        <h2 class="mb-1 font-bold">Cooking instructions:</h2>
        <p class="mx-2"><%=viewRecipeResult.instructions%></p>
    </div>

</div>